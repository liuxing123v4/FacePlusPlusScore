<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFC107"
	android:orientation="vertical"
	tools:context=".ui.FirstActivity">
		<ImageView
			android:id="@+id/imageView2"
			android:layout_width="320dp"
			android:layout_height="120dp"
			android:layout_gravity="center"
			android:layout_marginTop="16dp"
			android:background="@drawable/font"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.494"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageButton
					android:id="@+id/face_detect"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_gravity="center"
					android:layout_marginStart="8dp"
					android:layout_marginTop="4dp"
					android:layout_marginEnd="76dp"
					android:background="@drawable/face_detect"
					android:baselineAligned="false"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintStart_toEndOf="@+id/album_detect"
					app:layout_constraintTop_toTopOf="parent" />

				<ImageButton
					android:id="@+id/album_detect"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_marginStart="76dp"
					android:background="@drawable/album"
					android:baselineAligned="false"
					app:layout_constraintBottom_toBottomOf="@+id/face_detect"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="@+id/face_detect"
					app:layout_constraintVertical_bias="0.0" />

				<TextView
					android:id="@+id/album_detect_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="8dp"
					android:text="@string/album"
					android:textColor="#ffff"
					android:textSize="20sp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="@+id/album_detect"
					app:layout_constraintHorizontal_bias="0.509"
					app:layout_constraintStart_toStartOf="@+id/album_detect"
					app:layout_constraintTop_toBottomOf="@+id/album_detect"
					app:layout_constraintVertical_bias="0.0" />

				<TextView
					android:id="@+id/face_detect_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="8dp"
					android:text="@string/camera"
					android:textColor="#ffff"
					android:textSize="20sp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="@+id/face_detect"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintStart_toStartOf="@+id/face_detect"
					app:layout_constraintTop_toBottomOf="@+id/face_detect"
					app:layout_constraintVertical_bias="1.0" />

			</android.support.constraint.ConstraintLayout>

		</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/graph_button"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_gravity="center"
				android:layout_marginStart="8dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="76dp"
				android:background="@drawable/gragh"
				android:baselineAligned="false"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="1.0"
				app:layout_constraintStart_toEndOf="@+id/faceplus_button"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/faceplus_button"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginStart="76dp"
				android:background="@drawable/faceplus"
				android:baselineAligned="false"
				app:layout_constraintBottom_toBottomOf="@+id/graph_button"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="@+id/graph_button"
				app:layout_constraintVertical_bias="0.0" />

			<TextView
				android:id="@+id/faceplus_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="8dp"
				android:text="@string/faceplus"
				android:textColor="#ffff"
				android:textSize="20sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="@+id/faceplus_button"
				app:layout_constraintHorizontal_bias="0.509"
				app:layout_constraintStart_toStartOf="@+id/faceplus_button"
				app:layout_constraintTop_toBottomOf="@+id/faceplus_button"
				app:layout_constraintVertical_bias="0.0" />

			<TextView
				android:id="@+id/gragh_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				android:text="@string/grah"
				android:textColor="#ffff"
				android:textSize="20sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="@+id/graph_button"
				app:layout_constraintHorizontal_bias="0.454"
				app:layout_constraintStart_toStartOf="@+id/graph_button"
				app:layout_constraintTop_toBottomOf="@+id/graph_button"
				app:layout_constraintVertical_bias="1.0" />

		</android.support.constraint.ConstraintLayout>

	</LinearLayout>

	<ImageView
		android:id="@+id/imageView3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/handsome" />


</LinearLayout>